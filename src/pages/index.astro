---
import Card from "@/components/Card.astro";
import Button from "@/components/ui/Button.astro";
import Grid from "@/components/ui/Grid.astro";
import Heading from "@/components/ui/Heading.astro";
import MainLayout from "@/layouts/MainLayout.astro";
---

<MainLayout
  title="Detikcom Project."
  description="Welcome to Detikcom Project!">

  <div class="relative">
    <!-- Swiper -->
  
    <div style="--swiper-navigation-color: #fff; --swiper-pagination-color: #fff" class="swiper mySwiper2 max-w-md lg:absolute lg:top-20 lg:left-20 z-20">
      <div class="swiper-wrapper">
        <div class="swiper-slide">
          <Card imgUrl="https://swiperjs.com/demos/images/nature-1.jpg" />
        </div>
        <div class="swiper-slide">
          <Card imgUrl="https://swiperjs.com/demos/images/nature-2.jpg" />
        </div>
        <div class="swiper-slide">
          <Card imgUrl="https://swiperjs.com/demos/images/nature-3.jpg" />
        </div>
        <div class="swiper-slide">
          <Card imgUrl="https://swiperjs.com/demos/images/nature-4.jpg" />
        </div>
        <div class="swiper-slide">
          <Card imgUrl="https://swiperjs.com/demos/images/nature-5.jpg" />
        </div>
        <div class="swiper-slide">
          <Card imgUrl="https://swiperjs.com/demos/images/nature-6.jpg" />
        </div>
        <div class="swiper-slide">
          <Card imgUrl="https://swiperjs.com/demos/images/nature-7.jpg" />
        </div>
        <div class="swiper-slide">
          <Card imgUrl="https://swiperjs.com/demos/images/nature-8.jpg" />
        </div>
        
        <div class="swiper-slide">
          <Card imgUrl="https://swiperjs.com/demos/images/nature-10.jpg" />
        </div>
      </div>
      <div class="swiper-button-next"></div>
      <div class="swiper-button-prev"></div>    
    </div>
    <div class="swiper mySwiper hidden lg:block">
      <div class="swiper-wrapper">
        <div class="swiper-slide">
          <img class="aspect-video w-full object-cover" src="https://swiperjs.com/demos/images/nature-1.jpg" />
        </div>
        <div class="swiper-slide">
          <img class="aspect-video w-full object-cover" src="https://swiperjs.com/demos/images/nature-2.jpg" />
        </div>
        <div class="swiper-slide">
          <img class="aspect-video w-full object-cover" src="https://swiperjs.com/demos/images/nature-3.jpg" />
        </div>
        <div class="swiper-slide">
          <img class="aspect-video w-full object-cover" src="https://swiperjs.com/demos/images/nature-4.jpg" />
        </div>
        <div class="swiper-slide">
          <img class="aspect-video w-full object-cover" src="https://swiperjs.com/demos/images/nature-5.jpg" />
        </div>
        <div class="swiper-slide">
          <img class="aspect-video w-full object-cover" src="https://swiperjs.com/demos/images/nature-6.jpg" />
        </div>
        <div class="swiper-slide">
          <img class="aspect-video w-full object-cover" src="https://swiperjs.com/demos/images/nature-7.jpg" />
        </div>
        <div class="swiper-slide">
          <img class="aspect-video w-full object-cover" src="https://swiperjs.com/demos/images/nature-8.jpg" />
        </div>
        
        <div class="swiper-slide">
          <img class="aspect-video w-full object-cover" src="https://swiperjs.com/demos/images/nature-10.jpg" />
        </div>
      </div>    
    </div>

  </div>


  <!-- Swiper JS -->
  <script is:inline src="https://cdn.jsdelivr.net/npm/swiper@11/swiper-bundle.min.js"></script>

  <!-- Initialize Swiper -->
  <script is:inline>
    var swiper = new Swiper(".mySwiper", {
      loop: true,
      spaceBetween: 10,
      slidesPerView: 1,      
      watchSlidesProgress: true,
    simulateTouch: false,
    });
    var swiper2 = new Swiper(".mySwiper2", {
      loop: true,
      spaceBetween: 10,      
      navigation: {
        nextEl: ".swiper-button-next",
        prevEl: ".swiper-button-prev",
      },      
      controller: {
        by: "slide",
        control: swiper,
    },
    });
    
  </script>


  
</MainLayout>
